{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Tasks",
  "type": "object",
  "properties": {
    "task_id": {
      "type": "string"
    },
    "user_id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "completed"]
    }
  },
  "required": ["task_id", "user_id", "title", "status"]
}
